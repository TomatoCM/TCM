<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.pentaho.di</groupId>
        <artifactId>pentaho-kettle-docker-assemblies</artifactId>
        <version>9.3.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>webspoon_webapp</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.1.2</version>
                <executions>
                    <execution>
                        <id>get-pdi-ce</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.pentaho.di</groupId>
                                    <artifactId>pdi-ce</artifactId>
                                    <version>${project.version}</version>
                                    <type>zip</type>
                                    <outputDirectory>target/tomcat</outputDirectory>
                                    <includes>
                                        data-integration/system/**,
                                        data-integration/plugins/**,
                                        data-integration/simple-jndi/**,
                                        data-integration/samples/**,
                                        data-integration/LICENSE.txt
                                    </includes>
                                    <excludes>
                                        data-integration/plugins/platform-utils-plugin/*.jar,
                                        data-integration/system/karaf/system/pentaho/hadoop-cluster-ui/${project.version}/hadoop-cluster-ui-${project.version}.jar,
                                        data-integration/system/karaf/system/org/pentaho/di/plugins/repositories-plugin-core/${project.version}/repositories-plugin-core-${project.version}.jar,
                                        data-integration/system/karaf/system/org/pentaho/di/plugins/pdi-engine-configuration-ui/${project.version}/pdi-engine-configuration-ui-${project.version}.jar,
                                        data-integration/system/karaf/system/org/pentaho/di/plugins/file-open-save-core/${project.version}/file-open-save-core-${project.version}.jar,
                                        data-integration/system/karaf/system/org/pentaho/di/plugins/file-open-save-new-core/${project.version}/file-open-save-new-core-${project.version}.jar,
                                        data-integration/system/karaf/system/org/pentaho/di/plugins/get-fields-core/${project.version}/get-fields-core-${project.version}.jar,
                                        data-integration/system/karaf/system/org/pentaho/di/plugins/connections-ui/${project.version}/connections-ui-${project.version}.jar,
                                        data-integration/system/karaf/system/pentaho/pdi-dataservice-server-plugin/${project.version}/pdi-dataservice-server-plugin-${project.version}.jar,
                                        data-integration/system/karaf/system/org/pentaho/pentaho-marketplace-di/${project.version}/pentaho-marketplace-di-${project.version}.jar,
                                        data-integration/system/karaf/system/pentaho/pentaho-i18n-webservice-bundle/${project.version}/pentaho-i18n-webservice-bundle-${project.version}.jar,
                                        data-integration/system/karaf/system/pentaho/pentaho-kettle-repository-locator-impl-spoon/${project.version}/pentaho-kettle-repository-locator-impl-spoon-${project.version}.jar,
                                        data-integration/system/karaf/system/pentaho/pentaho-pdi-platform/${project.version}/pentaho-pdi-platform-${project.version}.jar,
                                        data-integration/system/karaf/etc/custom.properties
                                    </excludes>
                                    <fileMappers>
                                        <org.codehaus.plexus.components.io.filemappers.RegExpFileMapper>
                                            <pattern>^\Qdata-integration/LICENSE.txt\E</pattern>
                                            <replacement>./webSpoon-LICENSE.txt</replacement>
                                        </org.codehaus.plexus.components.io.filemappers.RegExpFileMapper>
                                        <org.codehaus.plexus.components.io.filemappers.RegExpFileMapper>
                                            <pattern>^\Qdata-integration/\E</pattern>
                                            <replacement>./</replacement>
                                        </org.codehaus.plexus.components.io.filemappers.RegExpFileMapper>
                                    </fileMappers>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.hitachivantara.karaf.assemblies</groupId>
                                    <artifactId>common-resources</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf</outputDirectory>
                                    <includes>**\/custom.properties</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>get-webspoon-war</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.pentaho.di</groupId>
                                    <artifactId>webspoon</artifactId>
                                    <version>${project.version}</version>
                                    <type>war</type>
                                    <outputDirectory>target/tomcat/webapps/spoon</outputDirectory>
                                    <excludes>
                                        **/WEB-INF/web.xml
                                    </excludes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <phase>process-resources</phase>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>pentaho-kettle</groupId>
                                    <artifactId>webspoon-security</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/lib</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>pentaho</groupId>
                                    <artifactId>pdi-platform-utils-plugin-core</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/plugins/platform-utils-plugin</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>pentaho</groupId>
                                    <artifactId>hadoop-cluster-ui</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/pentaho/hadoop-cluster-ui/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.pentaho.di.plugins</groupId>
                                    <artifactId>repositories-plugin-core</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/org/pentaho/di/plugins/repositories-plugin-core/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.pentaho.di.plugins</groupId>
                                    <artifactId>pdi-engine-configuration-ui</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/org/pentaho/di/plugins/pdi-engine-configuration-ui/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.pentaho.di.plugins</groupId>
                                    <artifactId>file-open-save-core</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/org/pentaho/di/plugins/file-open-save-core/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.pentaho.di.plugins</groupId>
                                    <artifactId>file-open-save-new-core</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/org/pentaho/di/plugins/file-open-save-new-core/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.pentaho.di.plugins</groupId>
                                    <artifactId>get-fields-core</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/org/pentaho/di/plugins/get-fields-core/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.pentaho.di.plugins</groupId>
                                    <artifactId>connections-ui</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/org/pentaho/di/plugins/connections-ui/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>pentaho</groupId>
                                    <artifactId>pdi-dataservice-server-plugin</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/pentaho/pdi-dataservice-server-plugin/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.pentaho</groupId>
                                    <artifactId>pentaho-marketplace-di</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/org/pentaho/pentaho-marketplace-di/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>pentaho</groupId>
                                    <artifactId>pentaho-i18n-webservice-bundle</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/pentaho/pentaho-i18n-webservice-bundle/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>pentaho</groupId>
                                    <artifactId>pentaho-kettle-repository-locator-impl-spoon</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/pentaho/pentaho-kettle-repository-locator-impl-spoon/${project.version}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>pentaho</groupId>
                                    <artifactId>pentaho-pdi-platform</artifactId>
                                    <version>${project.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/tomcat/system/karaf/system/pentaho/pentaho-pdi-platform/${project.version}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>copy-resources-conf</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/tomcat/conf</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources/</directory>
                                    <includes>
                                        <include>server.xml</include>
                                        <include>catalina.policy</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-webinf</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/tomcat/webapps/spoon/WEB-INF</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources/</directory>
                                    <includes>
                                        <include>web.xml</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-kettle</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/tomcat/system/kettle</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources/</directory>
                                    <includes>
                                        <include>slave-server-config.xml</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-archive</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly/assembly.xml</descriptor>
                            </descriptors>
                            <appendAssemblyId>false</appendAssemblyId>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
