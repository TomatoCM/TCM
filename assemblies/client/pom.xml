<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.pentaho.di</groupId>
  <artifactId>pdi-ce</artifactId>
  <version>8.1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>PDI Client Community Edition</name>

  <parent>
    <artifactId>pdi-assemblies</artifactId>
    <groupId>org.pentaho.di</groupId>
    <version>8.1.0.0-SNAPSHOT</version>
  </parent>

  <properties>
    <assembly.dir>${project.build.directory}/assembly</assembly.dir>
    <assembly.launcher.jar>pentaho-application-launcher-${pentaho-launcher.version}.jar</assembly.launcher.jar>

    <pdi-dataservice-driver-bundle.version>${project.version}</pdi-dataservice-driver-bundle.version>
    <ael.version>8.1.0.0-SNAPSHOT</ael.version>

    <pentaho-karaf.version>8.1.0.0-SNAPSHOT</pentaho-karaf.version>
    <pentaho-launcher.version>8.1.0.0-SNAPSHOT</pentaho-launcher.version>
    <oss-licenses.version>8.1.0.0-SNAPSHOT</oss-licenses.version>

    <!-- swt -->
    <org.eclipse.swt.gtk.linux.x86.version>4.3.2</org.eclipse.swt.gtk.linux.x86.version>
    <org.eclipse.swt.gtk.linux.x86_64.version>4.3.2</org.eclipse.swt.gtk.linux.x86_64.version>
    <org.eclipse.swt.win32.win32.x86.version>4.6</org.eclipse.swt.win32.win32.x86.version>
    <org.eclipse.swt.win32.win32.x86_64.version>4.6</org.eclipse.swt.win32.win32.x86_64.version>
    <org.eclipse.swt.cocoa.macosx.x86_64.version>4.6</org.eclipse.swt.cocoa.macosx.x86_64.version>

    <!-- plugins -->
    <pdi-core-plugin.version>${project.version}</pdi-core-plugin.version>
    <kettle-version-checker.version>${project.version}</kettle-version-checker.version>
    <kettle-dummy-plugin.version>${project.version}</kettle-dummy-plugin.version>
    <kettle-s3csvinput-plugin.version>${project.version}</kettle-s3csvinput-plugin.version>
    <kettle-shapefilereader-plugin.version>${project.version}</kettle-shapefilereader-plugin.version>
    <kettle-drools5-plugin.version>${project.version}</kettle-drools5-plugin.version>
    <kettle-gpload-plugin.version>${project.version}</kettle-gpload-plugin.version>
    <kettle-hl7-plugin.version>${project.version}</kettle-hl7-plugin.version>
    <kettle-openerp-plugin.version>${project.version}</kettle-openerp-plugin.version>
    <kettle-palo-plugin.version>${project.version}</kettle-palo-plugin.version>
    <kettle5-log4j-plugin.version>${project.version}</kettle5-log4j-plugin.version>
    <pdi-google-analytics-plugin.version>8.1.0.0-SNAPSHOT</pdi-google-analytics-plugin.version>
    <pdi-salesforce-plugin.version>8.1.0.0-SNAPSHOT</pdi-salesforce-plugin.version>
    <ms-access-bulk-loader-plugin.version>${project.version}</ms-access-bulk-loader-plugin.version>
    <lucid-db-streaming-loader-plugin.version>${project.version}</lucid-db-streaming-loader-plugin.version>
    <gp-bulk-loader-plugin.version>${project.version}</gp-bulk-loader-plugin.version>
    <pentaho-googledrive-vfs-plugin.version>${project.version}</pentaho-googledrive-vfs-plugin.version>
    <google-cloud-storage-vfs-plugin.version>${project.version}</google-cloud-storage-vfs-plugin.version>
    <elasticsearch-bulk-insert-plugin.version>${project.version}</elasticsearch-bulk-insert-plugin.version>
    <pdi-xml-plugin.version>8.1.0.0-SNAPSHOT</pdi-xml-plugin.version>
    <pdi-json-plugin.version>8.1.0.0-SNAPSHOT</pdi-json-plugin.version>
    <pdi-sap-plugin.version>8.1.0.0-SNAPSHOT</pdi-sap-plugin.version>
    <big-data-plugin.version>8.1.0.0-SNAPSHOT</big-data-plugin.version>
    <pentaho-cassandra-plugin.version>8.1.0.0-SNAPSHOT</pentaho-cassandra-plugin.version>
    <pdi-teradata-tpt-plugin-package.version>${project.version}</pdi-teradata-tpt-plugin-package.version>
    <pdi-platform-utils-plugin.version>8.1.0.0-SNAPSHOT</pdi-platform-utils-plugin.version>
    <vertica-bulkloader-plugin.version>8.1.0.0-SNAPSHOT</vertica-bulkloader-plugin.version>
    <pdi-pur-plugin.version>8.1.0.0-SNAPSHOT</pdi-pur-plugin.version>

    <!-- build plugins -->
    <properties-maven-plugin.version>1.0.0</properties-maven-plugin.version>
    <sql-maven-plugin.version>1.5</sql-maven-plugin.version>
  </properties>


  <dependencies>
    <dependency>
      <groupId>org.pentaho.di</groupId>
      <artifactId>pdi-lib</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Load properties to generate the sample database later -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <version>${properties-maven-plugin.version}</version>
        <executions>
          <execution>
            <phase>initialize</phase>
            <goals>
              <goal>read-project-properties</goal>
            </goals>
            <configuration>
              <files>
                <file>src/main/resources/samples/db/sampledb.init.properties</file>
              </files>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>add-libs</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${assembly.dir}/lib</outputDirectory>
              <includeScope>compile</includeScope>
              <includeTypes>jar</includeTypes>
            </configuration>
          </execution>
          <execution>
            <id>add-swt</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.eclipse.swt</groupId>
                  <artifactId>org.eclipse.swt.gtk.linux.x86</artifactId>
                  <version>${org.eclipse.swt.gtk.linux.x86.version}</version>
                  <outputDirectory>${assembly.dir}/libswt/linux/x86</outputDirectory>
                  <destFileName>swt.jar</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>org.eclipse.swt</groupId>
                  <artifactId>org.eclipse.swt.gtk.linux.x86_64</artifactId>
                  <version>${org.eclipse.swt.gtk.linux.x86_64.version}</version>
                  <outputDirectory>${assembly.dir}/libswt/linux/x86_64</outputDirectory>
                  <destFileName>swt.jar</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>org.eclipse.swt</groupId>
                  <artifactId>org.eclipse.swt.win32.win32.x86</artifactId>
                  <version>${org.eclipse.swt.win32.win32.x86.version}</version>
                  <outputDirectory>${assembly.dir}/libswt/win32</outputDirectory>
                  <destFileName>swt.jar</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>org.eclipse.swt</groupId>
                  <artifactId>org.eclipse.swt.win32.win32.x86_64</artifactId>
                  <version>${org.eclipse.swt.win32.win32.x86_64.version}</version>
                  <outputDirectory>${assembly.dir}/libswt/win64</outputDirectory>
                  <destFileName>swt.jar</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>org.eclipse.swt</groupId>
                  <artifactId>org.eclipse.swt.cocoa.macosx.x86_64</artifactId>
                  <version>${org.eclipse.swt.cocoa.macosx.x86_64.version}</version>
                  <outputDirectory>${assembly.dir}/libswt/osx64</outputDirectory>
                  <destFileName>swt.jar</destFileName>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
          <execution>
            <id>add-plugins</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>pdi-core-plugins</artifactId>
                  <version>${pdi-core-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-version-checker</artifactId>
                  <version>${kettle-version-checker.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-dummy-plugin</artifactId>
                  <version>${kettle-dummy-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-s3csvinput-plugin</artifactId>
                  <version>${kettle-s3csvinput-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-shapefilereader-plugin</artifactId>
                  <version>${kettle-shapefilereader-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-drools5-plugin</artifactId>
                  <version>${kettle-drools5-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-gpload-plugin</artifactId>
                  <version>${kettle-gpload-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-hl7-plugin</artifactId>
                  <version>${kettle-hl7-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-openerp-plugin</artifactId>
                  <version>${kettle-openerp-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-palo-plugin</artifactId>
                  <version>${kettle-palo-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle5-log4j-plugin</artifactId>
                  <version>${kettle5-log4j-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>pdi-google-analytics-plugin</artifactId>
                  <version>${pdi-google-analytics-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>pdi-salesforce-plugin</artifactId>
                  <version>${pdi-salesforce-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>ms-access-bulk-loader-plugin</artifactId>
                  <version>${ms-access-bulk-loader-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>lucid-db-streaming-loader-plugin</artifactId>
                  <version>${lucid-db-streaming-loader-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>gp-bulk-loader-plugin</artifactId>
                  <version>${gp-bulk-loader-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>pentaho-googledrive-vfs-plugin</artifactId>
                  <version>${pentaho-googledrive-vfs-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>                
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>google-cloud-storage-vfs-plugin</artifactId>
                  <version>${google-cloud-storage-vfs-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>elasticsearch-bulk-insert-plugin</artifactId>
                  <version>${elasticsearch-bulk-insert-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>pdi-xml-plugin</artifactId>
                  <version>${pdi-xml-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-json-plugin</artifactId>
                  <version>${pdi-json-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>kettle-sap-plugin</artifactId>
                  <version>${pdi-sap-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>pentaho</groupId>
                  <artifactId>pentaho-big-data-plugin</artifactId>
                  <version>${big-data-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho</groupId>
                  <artifactId>pentaho-cassandra-plugin-package</artifactId>
                  <version>${pentaho-cassandra-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>pdi-teradata-tpt-plugin-package</artifactId>
                  <version>${pdi-teradata-tpt-plugin-package.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>pentaho</groupId>
                  <artifactId>pdi-platform-utils-plugin</artifactId>
                  <version>${pdi-platform-utils-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho</groupId>
                  <artifactId>vertica-bulkloader-plugin</artifactId>
                  <version>${vertica-bulkloader-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.pentaho.di.plugins</groupId>
                  <artifactId>pdi-pur-plugin</artifactId>
                  <version>${pdi-pur-plugin.version}</version>
                  <type>zip</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${assembly.dir}/plugins</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>add-karaf</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>pentaho</groupId>
                  <artifactId>pentaho-karaf-assembly</artifactId>
                  <version>${pentaho-karaf.version}</version>
                  <classifier>client</classifier>
                  <type>zip</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${assembly.dir}/system</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>add-licenses</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>pentaho</groupId>
                  <artifactId>oss-licenses</artifactId>
                  <version>${oss-licenses.version}</version>
                  <type>zip</type>
                </artifactItem>
              </artifactItems>
              <includes>PentahoDataIntegration_OSS_Licenses.html</includes>
              <outputDirectory>${assembly.dir}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>add-dataservice-jdbc</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>pentaho</groupId>
                  <artifactId>pdi-dataservice-driver-bundle</artifactId>
                  <version>${pdi-dataservice-driver-bundle.version}</version>
                  <type>zip</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${assembly.dir}/Data Service JDBC Driver</outputDirectory>
              <useBaseVersion>true</useBaseVersion>
            </configuration>
          </execution>
          <execution>
            <id>add-laf-properties</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <dependency>
                  <groupId>pentaho-kettle</groupId>
                  <artifactId>kettle-ui-swt</artifactId>
                  <version>${project.version}</version>
                </dependency>
              </artifactItems>
              <outputDirectory>${assembly.dir}</outputDirectory>
              <includes>ui/laf.properties</includes>
            </configuration>
          </execution>
          <execution>
            <id>add-pdi-daemon</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.pentaho.adaptive</groupId>
                  <artifactId>pdi-websocket-daemon-assembly</artifactId>
                  <version>${ael.version}</version>
                  <type>zip</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${assembly.dir}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>add-launcher</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>pentaho</groupId>
                  <artifactId>pentaho-application-launcher</artifactId>
                  <version>${pentaho-launcher.version}</version>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${assembly.dir}/launcher</outputDirectory>
              <useBaseVersion>true</useBaseVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- post processing -->
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>rename-unpacked-dependencies</id>
            <phase>process-resources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <echo message="Moving unpacked dependencies to the right place..."/>
                <move file="${assembly.dir}/system/pentaho-karaf-assembly" tofile="${assembly.dir}/system/karaf"/>
                <move file="${assembly.dir}/pdi-websocket-daemon" tofile="${assembly.dir}/adaptive-execution"/>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- create the sample database, properties were read with properties-maven-plugin earlier -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>sql-maven-plugin</artifactId>
        <version>${sql-maven-plugin.version}</version>
        <configuration>
          <driver>${sample.db.driver}</driver>
          <url>${sample.db.url}${assembly.dir}/samples/db/${sample.db.name}</url>
          <username>${sample.db.user}</username>
          <password>${sample.db.password}</password>
        </configuration>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <srcFiles>
                <srcFile>src/main/resources/samples/db/backup.sql</srcFile>
              </srcFiles>
              <forceMojoExecution>true</forceMojoExecution>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>${h2.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
